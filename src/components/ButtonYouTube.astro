---
interface Props {
	webcastUrl: string | undefined;
}

const { webcastUrl } = Astro.props;
---
<!-- Component para ver el video del lanzamiento en YouTube -->
<div class="flex flex-col">
    <a class="flex flex-row gap-1 items-start text-red-700 text-bold text-1xl m-5" href={webcastUrl} target="_blank" rel="noopener noreferrer">
        Watch on YouTube
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-5 mt-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 4.5l7.5 7.5-7.5 7.5m-6-15l7.5 7.5-7.5 7.5" />
        </svg>
    </a>
</div>